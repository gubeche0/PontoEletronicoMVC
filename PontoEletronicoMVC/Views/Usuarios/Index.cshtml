@model IEnumerable<PontoEletronicoMVC.Models.Usuario>

@{
    ViewData["Title"] = "Funcionários";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Novo Funcionário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntryAm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExitAm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntryPm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExitPm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryAm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExitAm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryPm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExitPm)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
