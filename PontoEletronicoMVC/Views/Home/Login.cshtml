@model Usuario
@{
    ViewData["Title"] = "Login";
}

<style type="text/css">
    body {
    }

    .form-control {
        min-height: 41px;
        background: #fff;
        box-shadow: none !important;
        border-color: #e3e3e3;
    }

        .form-control:focus {
            border-color: #70c5c0;
        }

    .form-control, .btn {
        border-radius: 2px;
    }

    .login-form {
        width: 350px;
        margin: 0 auto;
        padding: 100px 0 30px;
    }

        .login-form form {
            color: #7a7a7a;
            border-radius: 2px;
            margin-bottom: 15px;
            font-size: 13px;
            background: #ececec;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
            position: relative;
        }

        .login-form h2 {
            font-size: 22px;
            margin: 35px 0 25px;
        }

        .login-form .avatar {
            position: absolute;
            margin: 0 auto;
            left: 0;
            right: 0;
            top: -50px;
            width: 95px;
            height: 95px;
            border-radius: 50%;
            z-index: 9;
            background: #2fa4e7;
            padding: 15px;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.1);
        }

            .login-form .avatar img {
                width: 100%;
            }

        .login-form input[type="checkbox"] {
            margin-top: 2px;
        }

        .login-form .btn {
            font-size: 16px;
            font-weight: bold;
            background: #2fa4e7;
            border: none;
            margin-bottom: 20px;
        }

            .login-form .btn:hover, .login-form .btn:focus {
                background: #157ab5;
                outline: none !important;
            }

        .login-form a {
            
            text-decoration: underline;
        }

            .login-form a:hover {
                text-decoration: none;
            }

        .login-form form a {
            /*color: #7a7a7a;*/
            color: #2fa4e7;
            text-decoration: none;
        }

            .login-form form a:hover {
                text-decoration: underline;
            }
</style>

<div class="login-form">
    <form asp-controller="Home" asp-action="Login" method="post">
        <div class="avatar">
            <img src="/images/avatar.png" alt="Avatar">
        </div>
        <h2 class="text-center">Ponto Eletronico</h2>

        @{ 
            try
            {
                var erro = TempData["ErrorLogin"].ToString();

                <p class="alert alert-danger">@erro</p>
                
            }
            catch
            {

            }
        }
        <div class="form-group">
            <input type="email" class="form-control" asp-for="Email" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" asp-for="Senha" placeholder="Senha">
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Entrar</button>
        </div>
        <div class="clearfix">
            <label class="pull-left checkbox-inline"><input type="checkbox"> Lembrar me</label>
            <a href="#" class="pull-right">Esqueceu a senha?</a>
        </div>
    </form>
</div>
